#include<iostream>
using namespace std;
int main()
{
    int i,sum=0;        //value starting with 0
    for(i=1;i<=15;i++)     //"i" starts with one because we are counting from one to fifteen 
    {
        if(i%2==0)           //If 'i' is divisible by 2 and remainder is 0 then it is even
        {
            sum=sum+i;
        }
    }
    cout<<"Sum="<<sum;       //This is the final addition of the no
}
